          %div
            %input#payment-type-worldpay{:name => "payment-type", :onclick => "show_payment_panel('worldpay-details')", :type => "radio"}/
            %label{:for => "payment-type-worldpay"} Pay with WorldPay
          #worldpay-details.payment-details-wrap{:hidden => ""}
