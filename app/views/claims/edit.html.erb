  <h1>1. Personal Details</h1>
</div>

<section id='edit-claim'>
  <p>Add the details of the claimants and defendants involved in the possession claim</p>
  <a href='#'>About claimants and defendants</a>

  <h4>Who is the claimant in this claim</h4>
  <% @claim.claimants.each do |person| %>
    <div class="well clearfix">
      <% if(@editors[person.id]) %>
        <%= render partial: 'people/edit', locals: {person: person} %>
      <% else %>
        <%= render partial: 'people/show', locals: {person: person} %>
      <% end %>
    </div>
  <% end %>
  <%= form_tag(new_claim_person_path( @claim ), method: "get") do %>
    <%= hidden_field_tag 'type', 'claimant' %>
    <%= submit_tag("Add a co-claimant") %>
  <% end %>

  <h2 class='center'>vs</h2>

  <h4>Who is the defendant in this claim</h4>
  <% @claim.defendants.each do |person| %>
    <div class="well clearfix">
      <% if(@editors[person.id]) %>
        <%= render partial: 'people/edit', locals: {person: person} %>
      <% else %>
        <%= render partial: 'people/show', locals: {person: person} %>
      <% end %>
    </div>
  <% end %>
  <%= form_tag(new_claim_person_path( @claim ), method: "get") do %>
    <%= hidden_field_tag 'type', 'defendant' %>
    <%= submit_tag("Add a co-defendant") %>
  <% end %>
</section>