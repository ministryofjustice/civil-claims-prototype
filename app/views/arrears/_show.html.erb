<div class="panel">
  <div class="panel-heading">Rental arrears</div>


    <p>Add all payment arrears to the table below or <a href="#">upload a csv file</a></p>

  <div class="row">
    <div class="col-lg-2">
      <%= f.label :rent_due_date, "Rent due on" %>
    </div>
    <div class="col-lg-3">
      <%= f.date_field :rent_due_date, :class => "form-control" %>
    </div>
  </div>
  
  <br />

    
  <div>
    <%= f.label :contributions_this_month, "Did the defendant(s) make any contributions this month?" %><br />
    <div class="row">
      <div class="col-lg-5">
        <div class="input-group">
          <span class="input-group-addon">&pound</span>
            <%= f.number_field :contributions_this_month, :id=>"arrears-paid-this-month", :class => "form-control" %>
          <span class="input-group-addon">.00</span>
        </div>
      </div>
    </div>
  </div>

  <br/>
  
  <div>
    <%= link_to_add_fields "arrears", "Add", f, :arrears %>
    <%= link_to_function "Cancel", "", :class => "btn btn-danger" %>
  </div>
  <br>

  <div>
    <table id="arrears-table" class="table table-condenced">
      <thead>
        <th>Rent due on</th>
        <th>Amount due</th>
        <th>Arrears</th>
        <th></th>
      </thead>
      <tbody id="arrears-body">
        <%= f.fields_for :arrears do |ar| %>
          <tr>
            <td><%= ar.date_field :due_date %></td>
            <!-- :field_attribute, :value => format_method(f.object.field_attribute) %> -->
            <td><%= ar.number_field :amount %></td>
            <td><%= ar.number_field :arrear %></td>
            <td>
              <%= link_to_function "Edit", "", :class => "btn btn-default btn-small" %>
              <%= link_to_remove_fields "X", ar %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <p>
    <a href="#">About adding rental arrears</a>
  </p>


  

  </div>
</div>