-# This is an example markup for a KSS section.
-# The definition for `1.1` can be found in your app/assets/stylesheets/ folder.

= kss_block '1.1' do
  .court-badge.clearfix
    .court-address
      %h3 Lambeth County Court
      %span Court House
      %span Cleaver Street
      %span Kennington Road
      %span London
      %span SE11 4DZ
      %span.dx DX 145020 Kennington 2
      = link_to 'View full court details', 'https://courttribunalfinder.service.gov.uk/courts/lambeth-county-court?from=se114dz', target: '_blank', class: 'button'
    .court-map
      = image_tag "lambeth-court-map.jpg"
      = link_to "View a larger version of the map", 'http://goo.gl/maps/XF2zk', target: '_blank'

= kss_block '1.2' do
  %table.moj-table
    %thead
      %tr
        %th.left-align Rent due on
        %th Rental amount
        %th Amount paid
        %th Arrears
    %tbody
      %tr
        %td.left-align= 2.months.ago.strftime('%d/%m/%Y')
        %td.pounds= pp_currency( 100 )
        %td.pounds= pp_currency( 20 )
        %td.pounds= pp_currency( 80 )
      %tr
        %td.left-align= 1.month.ago.strftime('%d/%m/%Y')
        %td.pounds= pp_currency( 500 )
        %td.pounds= pp_currency( 0 )
        %td.pounds= pp_currency( 500 )
    %tfoot
      %tr
        %td.left-align{ colspan: 3 } Total arrears
        %td.pounds= pp_currency( 580 )


= kss_block "1.3" do
  .address-linear
    %span Flat 3
    %span 92 Crystal Palace Park Road
    %span London
    %span SE26 6UP
  
= kss_block "1.4" do |mod|
  .person{ class: mod }
    %span.name= "Joe Bloggs"
    .address-linear
      %span Flat 3
      %span 92 Crystal Palace Park Road
      %span London
      %span SE26 6UP
    %div 07689 123345
    %div joe@example.com

= kss_block "1.5" do
  .moj-panel
    %h3 You can put pretty much anything in here