// GOV.UK Toolkit
@import "_colours";
@import "_typography";
@import "design-patterns/_buttons.scss";

$info-background: #d5e8f3;
$link-color-hover: #1D97FF;
$button-border-radius: 3px;

@mixin link-style{
  color: #2E3191;
  cursor: pointer;
  text-decoration: underline;
}

a.toggle-hidden:before {
  border-left-color: #333333;
  border-right-color: #333333;
  display: inline-block;
  width: 0;
  height: 0;
  margin-right: 4px;
  vertical-align: middle;
  border-left: 4px solid #000;
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
  content: "";
}

a.toggle-visible:before {
  border-top-color: #333333;
  border-bottom-color: #333333;
  display: inline-block;
  width: 0;
  height: 0;
  margin-right: 4px;
  vertical-align: middle;
  border-top: 4px solid #000;
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  content: "";
}

.inline-help p.collapse { margin-top: 8px; }


main { padding-top: 12px; }

header {
  img { max-width: none; } // bootstrap override to work with header+footer gov.uk css
  a#proposition-name { float: right; }
}

div.user-data { 
  border-bottom: 1px solid #ccc;
  max-width: 940px;
  background-color: #fff;
  margin: 0 auto;
  > ul.nav { 
    float: right; 
    > li > a {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  } 
}

#main-content {
  margin: 0 auto;
  max-width: 1020px;
  position: relative;
  padding: 0 2em;

  .row {
    margin-left: 2em;
    margin-right: 2em;
  }
}

.indent { text-indent: 10px;}


.alpha #phase-notice p {
  padding: 0.5em 2em;
  max-width: 940px;
  margin: 0 auto;
  font-size: 1.6rem;
  background: #d53880;
  color: #fff;
}

.alpha #proposition-name small {
  vertical-align: 3px;
  margin-left: 10px;
  padding: 3px 5px 1px;
  background-color: #d53880;
  font-family: "nta",Arial,sans-serif;
  font-size: 16px;
  line-height: 1.25;
  font-weight: 300;
  text-transform: none;
  color: #fff;
  font-weight: bold;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  -webkit-font-smoothing: subpixel-antialiased;
}

#main-content .page-header { border: none; }

header.page-header {
  margin: 0;
  border: none;
  hgroup h1 {
    font-family: "nta",Arial,sans-serif;
    font-size: 48px;
    line-height: 1.04167;
    font-weight: 400;
    text-transform: none;
    font-weight: 700;
    color: #0b0c0c;

    span {
      font-size: 27px;
      line-height: 1;
      font-weight: 400;
      display: block;
      margin-bottom: 0.25em;
      text-shadow: none;
      color: #6f777b;
    }

    strong {
      font-size: 17px;
      background: #d53880;
      color: #fff;
      vertical-align: middle;
      padding: 2px 7px;
    }
  }
}

nav#secondary {
  padding: 0px 2em;
  border-bottom: 2px solid #ccc;
  margin-bottom: 20px;
  ol {
    list-style: decimal inside none;
    margin: 0px 0px -2px 0px;
    counter-reset: pos;
    li {
      display: inline-block;
      &:before {
        counter-increment: pos;
        content: counter(pos) ".";
        float: left;
        margin-left: -2px;
        font-size:16px;
      }
      a {
        font-size:16px;
        color: #555;
        border-bottom: 2px solid #ccc;
        padding: 0px 10px 10px 14px;
        display: block;
        &:hover { 
          text-decoration: none;
          border-bottom: 2px solid #7fb299;
        }
        &.active {
          border-bottom: 2px solid #7fb299;
        }
      }
    }
  }
}

#footer { 
  margin-top: 20px; 
  .footer-wrapper { max-width: 940px; }
}

#user-nav a.current_role { font-weight: bold;}

#claim-nav li a.active { background-color: #cccccc; }

#claim-nav.navbar li {
  width: 120px;
}

.address span {
  float:left;
  clear:left;
}

.toggle-editor { float:left; clear:left; }

#new li a {
  display:block;
}

.form-horizontal {
  .controls { margin-left: 160px; }
  .control-label { text-align: left; float: left; }
  .control-group { margin-bottom:10px; }
}

.edit-person, .address-container {
  margin-top: 20px;
  margin-bottom: 20px;
  input[type=text], input[type=tel], input[type=email], select { 
    width: 20em;
    min-height: 30px;
    height: 30px;
    padding-top:4px;
    padding-bottom:4px;

    &.title  {
      width: 6em;   
    }
  }

  .btn-danger { margin-left: 21em; }
}

.address-container {
  .address_postcode {
    display: inline-block;
    .postcode { display: inline-block;  width: 7.5em; }
  }
  a.find-uk-address { display: inline-block; margin-left: 10px; }
  
  .inline-help {
    margin-bottom: 5px;
    a.toggle-help  { font-size: 80%; margin-left: 160px; }
  }

  .manual-address, .copy-address {
    display: block;
    margin-left: 10em;
    margin-bottom: 10px;
  }

  .button-group {
    margin:20px 0;
  }

}

div.striped {
  background-color: #d9edf7;
}

h2.center { text-align: center; }

.address-linear {
  span:after { content: ",  "; }
  span:last-child:after { content: ""; }
}

input.special { float:left; margin-right: 5px; }
input.break { clear:left; }

#claims-list li { list-style-type: none; margin-bottom: 20px;}
#claims-list .claim_id { float:left; width: 200px; }
#claims-list span.title { float:left; font-weight: bold; text-decoration: underline; }
#claims-list span.content { float:left; clear:left; }
#claims-list .participants { float:left; width: 300px; }
#claims-list .controls span { display:inline-block; padding: 3px 5px; margin-top: 8px; }

.radios {
  label { float:left; margin: 0 50px 0 20px; }
  input { float:left; }
}

iframe { border: none; }

.person, .address-editor {
  padding-left: 6em;
  .name { font-weight: bold; }
  margin-bottom: -1px;
}

.address-editor .form-group {
  &> div {
    padding:4px 10px;
  }

  h4 {
    margin-bottom: 10px;
  }

  label {
    margin-bottom: 0;
  }

  margin: 10px 0;
}


form.add-additional-person {
  margin-top: 21px;
  margin-bottom: 20px;
}

.claimant, .defendant, .address-for-possession {
  background-repeat: no-repeat;
  background-position: 18px 20px;
  background-size: 63px 68px;
  border-width: 1px 0;
  border-style: solid;
}

.claimant {
  background-color: #d5edea;
  background-image: url(<%= asset_path 'claimant.png' %>);
  border-color: #bddcd6;
}

.defendant {
  background-color: #fde4d6;
  background-image: url(<%= asset_path 'defendant.png' %>);
  border-color: #f49365;
  background-size: 52px 68px;
  background-position: 24px 20px;
}

.address-for-possession {
  background-color: #d5e8f2;
  background-image: url(<%= asset_path 'address.png' %>);
  border-color: #308bc4;
  background-size: 58px 63px;
  background-position: 20px 20px;

  .address-linear {
    font-weight: bold;
  }

  &> span {
    display:block;
  }
}

#edit-claim h3 { margin-top: 40px; }

.button{
  @include button;
  @include border-radius($button-border-radius);
}

.button-secondary{
  @include button($grey-3);
  @include border-radius($button-border-radius);
}

.button-warning{
  @include button($red);
  @include border-radius($button-border-radius);
}

.info-notice{
  background: url(https://assets.digital.cabinet-office.gov.uk/static/icon-information.png) no-repeat scroll 98% 1em $info-background;
  margin: 1em -1em 1.5em -1em;
  padding: 0.25em 1em 0.25em 1em;
}

details summary{
  @include link-style
}

details summary:hover{
  color: $link-color-hover;
}

details summary:focus{
  outline: none;
}

.fake-link{
  @include link-style
}

.fake-link:hover{
  color: $link-color-hover;
}

.big{
  zoom: 150%;
}

//stolen from govuk (removed parent 'article')
.govuk-table table {
  border-collapse: collapse;
  border-spacing: 0;
  margin: 1em -1em 2em -1em;
  width: 105.95%;

  caption {
    @include core-19;
    text-align: left;
    margin-bottom: 0.5em;
    padding-left: 1em;
  }
}

.govuk-table th, .govuk-table td {
  vertical-align: top;
  line-height: 1.3em;
  padding: 0.7em 0.5em 0.7em 1em;
}

.govuk-table tr:nth-child(even) td {
  background-color: #fff;
}

.govuk-table td {
  background: #eaedef;
  border: dotted 1px #bbb;

  small {
    @include core-16;
  }
}

.govuk-table th {
  line-height: 1.25em;
  text-align: left;
  color: #000;
  font-weight: normal;
  background-color: #e1e8e8;
  border: solid 1px #bbb;
}

.arrears-table{
  padding-top: 10px;
}

.test-field{
  font-family: "nta",Arial,sans-serif;
font-size: 16px;
line-height: 1.25;
font-weight: 300;
text-transform: none;
border: 1px solid #bbb;
min-width: 8em;
margin: 0 0.5em;
padding: 0.25em;
}


