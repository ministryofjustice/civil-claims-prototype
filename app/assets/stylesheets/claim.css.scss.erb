.striped-choice {
  // margin-bottom: 10px;
  position: relative;
  
  div {
    position: relative;
    z-index: 0;

    input {
      display: block-inline;
      height: 2.0em;
      margin-left: 10px;
    }

    input[type="radio"]:checked + label, input[type="checkbox"]:checked + label {
      background-color: $selected-item-background-color;
    }

    label {
      position: absolute;

      padding-top: 8px;
      padding-left: 35px;
      cursor: pointer;

      font-weight: normal;

      z-index: -1;
      
      top:0px;
      left:0;
      right:0;
      bottom:0;
    }
  }
