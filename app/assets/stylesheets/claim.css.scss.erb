#claims-list .controls span { display:inline-block; padding: 3px 5px; margin-top: 8px; }

.radios {
  label { float:left; margin: 0 50px 0 20px; }
  input { float:left; }
}

iframe { border: none; }

.person, .address-editor {
  padding-left: 6em;
  .name { font-weight: bold; }
  margin-bottom: -1px;
}

.address-editor .form-group {
  &> div {
    padding:4px 10px;
  }

  h4 {
    margin-bottom: 10px;
  }

  label {
    margin-bottom: 0;
  }

  margin: 10px 0;
}

.striped-radios div {

  position: relative;
  z-index: 0;

  input {
    display: block;
    height: 2em;
    margin-top: 0px;
  }

  input[type="radio"]:checked + label {
    background-color: #d9edf7;
  }

  label {
    position: absolute;

    padding-top: 9px;
    padding-left: 34px;

    z-index: -1;
    
    top:0;
    left:0;
    right:0;
    bottom:0;
  }
}


form.add-additional-person {
  margin-top: 21px;
  margin-bottom: 20px;
}

.claimant, .defendant, .address-for-possession {
  background-repeat: no-repeat;
  background-position: 18px 20px;
  background-size: 63px 68px;
  border-width: 1px 0;
  border-style: solid;
}

.claimant {
  background-color: #d5edea;
  background-image: url(<%= asset_path 'claimant.png' %>);
  border-color: #bddcd6;
}

.defendant {
  background-color: #fde4d6;
  background-image: url(<%= asset_path 'defendant.png' %>);
  border-color: #f49365;
  background-size: 52px 68px;
  background-position: 24px 20px;
}

.address-for-possession {
  background-color: #d5e8f2;
  background-image: url(<%= asset_path 'address.png' %>);
  border-color: #308bc4;
  background-size: 58px 63px;
  background-position: 20px 20px;

  .address-linear {
    font-weight: bold;
  }

  &> span {
    display:block;
  }
}

#edit-claim h3 { margin-top: 40px; }

.button{
  @include button;
  @include border-radius($button-border-radius);
}

.button-secondary{
  @include button($grey-3);
  @include border-radius($button-border-radius);
}

.button-warning{
  @include button($red);
  @include border-radius($button-border-radius);
}

details summary{
  @include link-style
}


.fake-link{
  @include link-style
}

.big{
  zoom: 150%;
}

