// GOV.UK Toolkit
@import "_colours";
@import "_typography";

a.toggle-hidden:before {
  border-left-color: #333333;
  border-right-color: #333333;
  display: inline-block;
  width: 0;
  height: 0;
  margin-right: 4px;
  vertical-align: middle;
  border-left: 4px solid #000;
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
  content: "";
}

a.toggle-visible:before {
  border-top-color: #333333;
  border-bottom-color: #333333;
  display: inline-block;
  width: 0;
  height: 0;
  margin-right: 4px;
  vertical-align: middle;
  border-top: 4px solid #000;
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  content: "";
}

.inline-help p.collapse { margin-top: 8px; }


main { padding-top: 12px; }

header {
  img { max-width: none; } // bootstrap override to work with header+footer gov.uk css
  a#proposition-name { float: right; }
}

div.user-data { 
  border-bottom: 1px solid #ccc;
  max-width: 940px;
  background-color: #fff;
  margin: 0 auto;
  > ul.nav { 
    float: right; 
    > li > a {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  } 
}

#main-content {
  margin: 0 auto;
  max-width: 1020px;
  position: relative;
  padding: 0 2em;

  .row {
    margin-left: 2em;
    margin-right: 2em;
  }
}

.indent { text-indent: 10px;}


.alpha #phase-notice p {
  padding: 0.5em 2em;
  max-width: 940px;
  margin: 0 auto;
  font-size: 1.6rem;
  background: #d53880;
  color: #fff;
}

.alpha #proposition-name small {
  vertical-align: 3px;
  margin-left: 10px;
  padding: 3px 5px 1px;
  background-color: #d53880;
  font-family: "nta",Arial,sans-serif;
  font-size: 16px;
  line-height: 1.25;
  font-weight: 300;
  text-transform: none;
  color: #fff;
  font-weight: bold;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  -webkit-font-smoothing: subpixel-antialiased;
}

#main-content .page-header { border: none; }

header.page-header {
  margin: 0;
  border: none;
  hgroup h1 {
    font-family: "nta",Arial,sans-serif;
    font-size: 48px;
    line-height: 1.04167;
    font-weight: 400;
    text-transform: none;
    font-weight: 700;
    color: #0b0c0c;

    span {
      font-size: 27px;
      line-height: 1;
      font-weight: 400;
      display: block;
      margin-bottom: 0.25em;
      text-shadow: none;
      color: #6f777b;
    }

    strong {
      font-size: 17px;
      background: #d53880;
      color: #fff;
      vertical-align: middle;
      padding: 2px 7px;
    }
  }
}

nav#secondary {
  padding: 0px 2em;
  border-bottom: 2px solid #ccc;
  margin-bottom: 20px;
  ol {
    list-style: decimal inside none;
    margin: 0px 0px -2px 0px;
    counter-reset: pos;
    li {
      display: inline-block;
      &:before {
        counter-increment: pos;
        content: counter(pos) ".";
        float: left;
        margin-left: -2px;
        font-size:16px;
      }
      a {
        font-size:16px;
        color: #555;
        border-bottom: 2px solid #ccc;
        padding: 0px 10px 10px 14px;
        display: block;
        &:hover { 
          text-decoration: none;
          border-bottom: 2px solid #7fb299;
        }
        &.active {
          border-bottom: 2px solid #7fb299;
        }
      }
    }
  }
}

#footer { 
  margin-top: 20px; 
  .footer-wrapper { max-width: 940px; }
}

#user-nav a.current_role { font-weight: bold;}

#claim-nav li a.active { background-color: #cccccc; }

#claim-nav.navbar li {
  width: 120px;
}

.address span {
  float:left;
  clear:left;
}

.toggle-editor { float:left; clear:left; }

#new li a {
  display:block;
}

.form-horizontal {
  .controls { margin-left: 160px; }
  .control-label { text-align: left; float: left; }
  .control-group { margin-bottom:10px; }
}

.edit-person {
  margin-bottom: 40px;
  .controls {
    input, select { 
      width: 20em;
      min-height: 30px;
      height: 30px;
      padding-top:4px;
      padding-bottom:4px;
    }
    select {
      width: 6em; 
    }
  }

  .btn-danger { margin-left: 21em; }

  .address_postcode {
    .postcode { display: inline-block;  width: 6.5em; }
    a { display: inline-block; margin-left: 10px; }
  }
  
  .inline-help {
    margin-bottom: 5px;
    a.toggle-help  { font-size: 80%; margin-left: 160px; }
  }
}

h2.center { text-align: center; }

.address-linear {
  span:after { content: ",  "; }
  span:last-child:after { content: ""; }
}

input.special { float:left; margin-right: 5px; }
input.break { clear:left; }

#claims-list li { list-style-type: none; margin-bottom: 20px;}
#claims-list .claim_id { float:left; width: 200px; }
#claims-list span.title { float:left; font-weight: bold; text-decoration: underline; }
#claims-list span.content { float:left; clear:left; }
#claims-list .participants { float:left; width: 300px; }
#claims-list .controls span { display:inline-block; padding: 3px 5px; background-color: #cccccc; margin-top: 8px; }

.radios {
  label { float:left; margin: 0 50px 0 20px; }
  input { float:left; }
}

iframe { border: none; }

.person {
  padding-left: 6em;
  .name { font-weight: bold; }
}

.claimant, .defendant {
  background-repeat: no-repeat;
  background-position: 18px 20px;
  background-size: 63px 68px;
  border-width: 1px 0;
  border-style: solid;
}

.claimant {
  background-color: #d5edea;
  background-image: url(<%= asset_path 'claimant.png' %>);
  border-color: #bddcd6;
}

.defendant {
  background-color: #fde4d6;
  background-image: url(<%= asset_path 'defendant.png' %>);
  border-color: #f49365;
  background-size: 52px 68px;
  background-position: 24px 20px;
}

.person.not-first { margin-top: -21px; }

#edit-claim h3 { margin-top: 40px; }
