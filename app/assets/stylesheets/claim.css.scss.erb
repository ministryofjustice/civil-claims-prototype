@import "_colours";
@import "_typography";
@import "design-patterns/_buttons.scss";

$default-panel-background-color: #F8F8F8;
$default-panel-border-color: #E3E3E3;
$info-background: #D2E8F2;
$link-color-hover: #1D97FF;
$selected-item-background-color: #D5E9F4;
$button-border-radius: 0px;

$labeled-content-label-width: 20%;
$labeled-content-block-width: 35%;

@mixin link-style {
  color: #2E3191;
  cursor: pointer;
  text-decoration: underline;
  &:hover {
    color: $link-color-hover;
  }
  &:focus {
    outline: none;
  }
}

@mixin panel-style($background-color: $default-panel-background-color, $border-color: $default-panel-border-color) {
  background-color: $background-color;
  border-top: 1px solid $border-color;
  border-bottom: 1px solid $border-color;
  padding: 20px 90px 20px 90px;
  label {
    font-weight: normal;
  }
}


a.toggle-hidden:before {
  border-left-color: #333333;
  border-right-color: #333333;
  display: inline-block;
  width: 0;
  height: 0;
  margin-right: 4px;
  vertical-align: middle;
  border-left: 4px solid #000;
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
  content: "";
}

a.toggle-visible:before {
  border-top-color: #333333;
  border-bottom-color: #333333;
  display: inline-block;
  width: 0;
  height: 0;
  margin-right: 4px;
  vertical-align: middle;
  border-top: 4px solid #000;
  border-right: 4px solid transparent;
  border-left: 4px solid transparent;
  content: "";
}

.inline-help p.collapse { margin-top: 8px; }


main { padding-top: 12px; }

header {
  img { max-width: none; } // bootstrap override to work with header+footer gov.uk css
  a#proposition-name { float: right; }
}

div.user-data { 
  border-bottom: 1px solid #ccc;
  max-width: 940px;
  background-color: #fff;
  margin: 0 auto;
  > ul.nav { 
    float: right; 
    > li > a {
      padding-top: 10px;
      padding-bottom: 10px;
    }
  } 
}

#main-content {
  margin: 0 auto;
  max-width: 1020px;
  position: relative;
  padding: 0 2em;

  .row {
    margin-left: 2em;
    margin-right: 2em;
  }
}

.indent { text-indent: 10px;}


.alpha #phase-notice p {
  padding: 0.5em 2em;
  max-width: 940px;
  margin: 0 auto;
  font-size: 1.6rem;
  background: #d53880;
  color: #fff;
}

.alpha #proposition-name small {
  vertical-align: 3px;
  margin-left: 10px;
  padding: 3px 5px 1px;
  background-color: #d53880;
  font-family: "nta",Arial,sans-serif;
  font-size: 16px;
  line-height: 1.25;
  font-weight: 300;
  text-transform: none;
  color: #fff;
  font-weight: bold;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  -webkit-font-smoothing: subpixel-antialiased;
}

#main-content .page-header { border: none; }

header.page-header {
  margin: 0;
  border: none;
  hgroup h1 {
    font-family: "nta",Arial,sans-serif;
    font-size: 48px;
    line-height: 1.04167;
    font-weight: 400;
    text-transform: none;
    font-weight: 700;
    color: #0b0c0c;

    span {
      font-size: 27px;
      line-height: 1;
      font-weight: 400;
      display: block;
      margin-bottom: 0.25em;
      text-shadow: none;
      color: #6f777b;
    }

    strong {
      font-size: 17px;
      background: #d53880;
      color: #fff;
      vertical-align: middle;
      padding: 2px 7px;
    }
  }
}

nav#secondary {
  padding: 0px 2em;
  border-bottom: 2px solid #ccc;
  margin-bottom: 20px;
  ol {
    list-style: decimal inside none;
    margin: 0px 0px -2px 0px;
    counter-reset: pos;
    li {
      display: inline-block;
      &:before {
        counter-increment: pos;
        content: counter(pos) ".";
        float: left;
        margin-left: -2px;
        font-size:16px;
      }
      a {
        font-size:16px;
        color: #555;
        border-bottom: 2px solid #ccc;
        padding: 0px 10px 10px 14px;
        display: block;
        &:hover { 
          text-decoration: none;
          border-bottom: 2px solid #7fb299;
        }
        &.active {
          border-bottom: 2px solid #7fb299;
        }
      }
    }
  }
}

#edit-claim form {
  input {
    display:inline-block;
  }
  input:focus:invalid {
    color: #555555;
    border-color: #73b9ef;
    -webkit-box-shadow: 0px 0px 3px 2px rgba(115, 185, 239, 0.3);
  }
  input:invalid {
    color: red;
    border-color: red;
    -webkit-box-shadow: 0px 0px 3px 2px rgba(255, 0, 0, 0.3);
  }
  input:valid + span.icon-container:after {
    content: 'y';
    color: green;
  }
  input:invalid + span.icon-container:after {
    content: 'n';
    color: red;
  }
  input + span.icon-container:after {
    font-family: 'validators';
    top:3px;
    left:-27px;
    position:relative;
  }
}

#footer { 
  margin-top: 20px; 
  .footer-wrapper { max-width: 940px; }
}

#user-nav a.current_role { font-weight: bold;}

#claim-nav li a.active { background-color: #cccccc; }

#claim-nav.navbar li {
  width: 120px;
}

.address span {
  float:left;
  clear:left;
}

.toggle-editor { float:left; clear:left; }

#new li a {
  display:block;
}

.form-horizontal {
  .controls { margin-left: 160px; }
  .control-label { text-align: left; float: left; }
